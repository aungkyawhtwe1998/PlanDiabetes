<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeScreenFg"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:id="@+id/cardGlucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:background="@color/colorStandardWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="သင်တိုင်းတာခဲ့သည့် ဆီးချို Level"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#33523E"
                        android:id="@+id/txt_lastglu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 mg/dL"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="တိုင်းတာခဲ့သည့်အချိန်"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_lasttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_period"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_gluimg_foreground"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/mrl_home_glucose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/RippleStyleGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                            android:src="@drawable/ic_sugar_blood_level" />

                        <TextView
                            android:textColor="#E05B49"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="glucose level ထည့်ရန်"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:backgroundTint="#fff"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/mrl_home_exe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/RippleStyleGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_bike" />

                        <TextView
                            android:textColor="#368C0E"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="လေ့ကျင့်ခန်းလုပ်ရန်"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/mrl_home_mela"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/RippleStyleGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                            android:src="@drawable/ic_bacon" />

                        <TextView
                            android:textColor="#f19b0b"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Carbohydrate စားသုံးမှုထည့်ရန်"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/mrl_home_med"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/RippleStyleGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                            android:src="@drawable/ic_medicines" />

                        <TextView
                            android:textColor="#2841dc"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="ဆေးသောက်ရန်"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/RippleStyleGrey"
                android:id="@+id/btnWeight"
                >
                <LinearLayout
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_weight"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ကိုယ်အေလးချိန်မှတ်သားရန်"
                        android:textColor="#028374"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:id="@+id/layout_suggest"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:padding="5dp"
                    android:textColor="#DA7D19"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="သင့်အတွက် ေနာက်ထပ် စားေသာက်နိုင်ရန် တိုက်တွန်းချက်"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#02093A"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_todayglu"
                    android:layout_marginBottom="5dp"/>

                <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_gluUpDow"/>
                <TextView
                    android:drawableTint="#DA5619"
                    android:layout_marginBottom="5dp"
                    android:background="#75A4CECD"
                    android:textStyle="bold"
                    android:textColor="#035347"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="စားပြီး Carbohydrate စုစုပေါင်း ="/>
                <TextView
                    android:backgroundTint="#75A4CECD"
                    android:textAlignment="center"
                    android:textColor="#DA5619"
                    android:layout_marginBottom="5dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_todayeat"/>
                <TextView
                    android:drawableLeft="@drawable/ic_add_alert_black_24dp"
                    android:drawableTint="#DA5619"
                    android:background="#75A4CECD"
                    android:textStyle="bold"
                    android:textColor="#035347"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="သင်နောက်ထပ် စားနိုင်မည့် Carbohydrate ပမာဏ="/>


                <TextView
                    android:drawableLeft="@drawable/ic_add_alert_black_24dp"
                    android:drawableTint="#DA5619"
                    android:background="#75A4CECD"
                    android:textStyle="bold"
                    android:textColor="#035347"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="သင်နောက်ထပ်ထက် စားနိုင်မည့် Carbohydrate ပမာဏ="/>
                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="#DA5619"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcaneat"/>
                <TextView
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="25sp"
                    android:textColor="#DA5619"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtnext_caneat"/>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:background="#75A4CECD"
                    android:textStyle="bold"
                    android:textColor="#035347"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="လေ့ကျင့်ခန်းကြောင့် ‌လောင်ကျွမ်းမှု ပမာဏ="/>

                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="25sp"
                    android:textColor="#DA5619"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtExerciseCal"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:textColor="#DA7D19"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="သင့်အတွက် ေနာက်ထပ် စားေသာက်နိုင်ရန် တိုက်တွန်းချက်"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:drawableTint="#DA7D19"
                    android:background="#8BFFE33F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_add_alert_black_24dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:drawableTint="#DA5619"
                    android:background="#8BFFE33F"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_add_alert_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableTint="#DA5619"
                    android:background="#8BFFE33F"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_add_alert_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#DA5619"
                    android:textAlignment="center"
                    android:text="သင် တိုင်းတာခဲ့သည့် Glucose Level အတက်အကျ"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>



</androidx.core.widget.NestedScrollView>